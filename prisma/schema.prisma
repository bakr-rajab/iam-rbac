
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
// The User model represents a user in the system. Each user can have a role.
model User {
  id        Int        @id @default(autoincrement())
  username  String     @unique
  password  String
  isAdmin   Boolean  @default(true)
  roleId    Int?
  role      Role?      @relation(fields: [roleId], references: [id])
}

// The Role model represents a role in the system. Each role can have multiple users, permissions, and policies.
model Role {
  id           Int           @id @default(autoincrement())
  name         String        @unique
  users        User[]        // One-to-many relationship
  permissions  Permission[]  // Many-to-many relationship
  policies     Policy[]      // One-to-many relationship
}

// The Permission model represents a permission in the system. Each permission can be associated with multiple roles and policies.
model Permission {
  id         Int      @id @default(autoincrement())
  action     String
  resource   String
  roles      Role[]   // Many-to-many relationship
  policies   Policy[] // One-to-many relationship
}

// The Policy model represents a policy in the system. Each policy is associated with a role and a permission.
model Policy {
  id            Int        @id @default(autoincrement())
  effect        String     // 'ALLOW' or 'DENY'
  action        String
  resource      String
  roleId        Int        // Foreign key for Role
  role          Role       @relation(fields: [roleId], references: [id])
  permissionId  Int        // Foreign key for Permission
  permission    Permission @relation(fields: [permissionId], references: [id])
}

// The Cart model represents a shopping cart in the system. Each cart is associated with a client and contains multiple products.
model Cart {
  id         Int      @id @default(autoincrement())
  clientId   Int
  productId  Int
  quantity   Int
}


